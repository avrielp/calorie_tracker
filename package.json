{
  "name": "calorie-tracker",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*",
    "functions"
  ],
  "scripts": {
    "env:sync:web": "node scripts/sync-web-env.mjs",
    "mobile:ios": "npm -w CalorieTracker run ios",
    "mobile:android": "npm -w CalorieTracker run android",
    "mobile:start": "npm -w CalorieTracker run start",
    "web:dev": "npm run env:sync:web && npm -w web run dev",
    "web:build": "npm run env:sync:web && npm -w web run build",
    "functions:build": "npm -w functions run build",
    "functions:serve": "npm -w functions run serve",
    "functions:deploy": "npm -w functions run deploy"
  }
}


